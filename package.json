{
  "name": "dan-sdk",
  "version": "0.0.1",
  "description": "SDK to interact with DAN protocol",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --passWithNoTests  --runInBand --no-cache --forceExit",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf dist",
    "build": "npm clean && tsc -p tsconfig-build.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ag-net/sdk.git"
  },
  "author": "Leonardo Bonetti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ag-net/sdk/issues"
  },
  "homepage": "https://github.com/ag-net/sdk#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.3",
    "ts-node": "^3.3.0",
    "ts-node-dev": "^1.1.8",
    "ts-node-register": "^1.0.0",
    "tsc-alias": "^1.5.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@substrate/txwrapper-core": "^4.0.0",
    "git-commit-msg-linter": "^4.2.1"
  }
}
